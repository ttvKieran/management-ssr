#offcanvasCart.offcanvas.offcanvas-end(data-bs-scroll='true' tabindex='-1' aria-labelledby='My Cart')
  .offcanvas-header.justify-content-center
    button.btn-close(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
  .offcanvas-body
    .order-md-last
      h4.d-flex.justify-content-between.align-items-center.mb-3
        span.text-primary Your cart
        span.badge.bg-primary.rounded-pill 3
      ul.list-group.mb-3
        li.list-group-item.d-flex.justify-content-between.lh-sm
          div
            h6.my-0 Growers cider
            small.text-body-secondary Brief description
          span.text-body-secondary $12
        li.list-group-item.d-flex.justify-content-between.lh-sm
          div
            h6.my-0 Fresh grapes
            small.text-body-secondary Brief description
          span.text-body-secondary $8
        li.list-group-item.d-flex.justify-content-between.lh-sm
          div
            h6.my-0 Heinz tomato ketchup
            small.text-body-secondary Brief description
          span.text-body-secondary $5
        li.list-group-item.d-flex.justify-content-between
          span Total (USD)
          strong $20
      button.w-100.btn.btn-primary.btn-lg(type='submit') Continue to checkout
#offcanvasSearch.offcanvas.offcanvas-end(data-bs-scroll='true' tabindex='-1' aria-labelledby='Search')
  .offcanvas-header.justify-content-center
    button.btn-close(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
  .offcanvas-body
    .order-md-last
      h4.d-flex.justify-content-between.align-items-center.mb-3
        span.text-primary Search
      form.d-flex.mt-3.gap-0(role='search' action='index.html' method='get')
        input.form-control.rounded-start.rounded-0.bg-light(type='email' placeholder='What are you looking for?' aria-label='What are you looking for?')
        button.btn.btn-dark.rounded-end.rounded-0(type='submit') Search