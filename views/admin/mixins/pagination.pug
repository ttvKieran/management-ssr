mixin pagination(pagination)
    nav(aria-label='Page navigation' class='mt-3')
        ul.pagination
            if(pagination.currentPage > 1)
                li.page-item.first
                    button.page-link(button-pagination = 1) 
                        i.tf-icon.bx.bx-chevrons-left
                li.page-item.prev
                    button.page-link(button-pagination = pagination.currentPage - 1) 
                        i.tf-icon.bx.bx-chevron-left

            - for(let i = 1; i <= pagination.totalPage; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    button.page-link(button-pagination = i) #{i}

            if(pagination.currentPage < pagination.totalPage)
                li.page-item.next
                    button.page-link(button-pagination = pagination.currentPage + 1) 
                        i.tf-icon.bx.bx-chevron-right
                li.page-item.last
                    button.page-link(button-pagination = pagination.totalPage) 
                        i.tf-icon.bx.bx-chevrons-right